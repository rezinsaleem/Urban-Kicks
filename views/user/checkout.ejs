		<script>
		
  function displayAlert(message, icon, buttonText) {
    Swal.fire({
      text: message,
      icon: icon,
      confirmButtonText: buttonText,
      customClass: {
        title: 'text-danger',
        popup: 'swal2-popup-custom',
        confirmButton: 'btn btn-danger'
      },
      showCancelButton: false,
      showCloseButton: true,
      showLoaderOnConfirm: false,
      timer: 3000
    });
  }

			function couponApply() {
				const couponCode = document.getElementById('c_code').value;
				const subt = document.getElementById('subt').innerText.trim()
        const subtotal = parseFloat(subt.replace(/[^0-9.-]/g, ''));
				fetch('/applyCoupon', {
					method: "POST",
					headers: {
						'Content-Type': "application/json"
					},
					body: JSON.stringify({ couponCode, subtotal })
				})
					.then(response => response.json())
					.then(data => {
						if (data.success) {
							displayAlert("Coupon applied", "success", "OK");

							document.getElementById('dicprice').innerText = "-₹ " + data.dicprice +".00"
							document.getElementById('total').innerText = `₹ ${data.price}.00`
							document.getElementById('amount').value = `${data.price}`
						} else {
							displayAlert(data.message, "error", "OK");
						}
					})
					.catch(error => {
						console.error('Error applying coupon:', error);
						displayAlert('An error occurred while applying the coupon. Please try again.', "error", "OK");
					});
			}

			function couponRevoke() {

				const couponCode = document.getElementById('c_code').value;
				const subt = document.getElementById('subt').innerText.trim()
        const subtotal = parseFloat(subt.replace(/[^0-9.-]/g, ''));
				fetch('/revokeCoupon', {
					method: "POST",
					headers: {
						'Content-Type': "application/json"
					},
					body: JSON.stringify({ couponCode, subtotal })
				})
					.then(response => response.json())
					.then(data => {
						if (data.success) {
							displayAlert("Coupon revoked", "success", "OK");

							document.getElementById('dicprice').innerText = "₹ 0.00"
							document.getElementById('total').innerText = `${data.price}`
							document.getElementById('amount').value = `${data.price}`
							document.getElementById('c_code').value = "";

						} else {
							displayAlert(data.message, "error", "OK");
						}
					})
					.catch(error => {
						console.error('Error applying coupon:', error);
						displayAlert('An error occurred while revoking the coupon. Please try again.', "error", "OK");
					});
			}


		</script>

