<%- include('../partials/userHeader') -%>
  <style>
    .option-wrapper {
      transition: background-color 0.2s;
    }

    .option-wrapper:hover {
      background-color: #d7d6d6;
      /* Change to the desired hover background color */
    }

    td {
      font-size: small;
    }
  </style>



  <div class="colorlib-loader"></div>

  <div id="page">
    <nav class="colorlib-nav" role="navigation">
      <div class="top-menu">
        <div class="container">
          <div class="row">
            <div class="col-sm-7 col-md-9">
              <div id="colorlib-logo"><a href="/">Urban Kicks</a></div>
            </div>
            <div class="col-sm-5 col-md-3">
              <form action="/" id="searchForm" class="search-wrap">
                <div class="form-group">
                  <input type="search" name="search" id="searchInput" class="form-control search" placeholder="Search">
                  <button class="btn btn-primary submit-search text-center" type="submit"><i
                      class="icon-search"></i></button>
                </div>
              </form>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 text-left menu-1">
              <ul>
                <li class="<%= currentPage === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
                <% categories.forEach(category=> { %>
                  <li class="<%= currentPage === category.id ? 'active' : '' %>"><a href="/shop/<%= category.id %>">
                      <%= category.name %>
                    </a></li>
                  <% }); %>
                    <li class="<%= currentPage === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
                    <li class="<%= currentPage === 'contact' ? 'active' : '' %>"><a href="/contact">Contact</a></li>
                    <li class="cart <%= currentPage === 'cart' ? 'active' : '' %>"><a href="/cart"><i
                          class="icon-shopping-cart"></i> [0]</a></li>
                    <li class="wishlist <%= currentPage === 'wishlist' ? 'active' : '' %>"><a href="/wishlist"><i
                          class="icon-heart2"></i></a></li>
                    <li class="user-profile <%= currentPage === 'profile' ? 'active' : '' %>"><a href="/profile"><i
                          class="icon-user2"></i></a></li>

              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="sale">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 offset-sm-2 text-center">
              <div class="row">
                <div class="owl-carousel2">
                  <div class="item">
                    <div class="col">
                      <h3><a href="#">25% off (Almost) Everything! Use Code: Summer Sale</a></h3>
                    </div>
                  </div>
                  <div class="item">
                    <div class="col">
                      <h3><a href="#">Our biggest sale yet 50% off all summer shoes</a></h3>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row mt-5">
          <div class="col-md-4">
            <!-- User Information -->
            <div class="card mb-4" style="box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
              <div class="card-body">
                <h5 class="card-title">User Information</h5>
                <p class="card-text">Name: <%= user.name %>
                </p>
                <p class="card-text">Email: <%= user.email %>
                </p>
                <a href="/logout" class="btn btn-outline-dark">Sign Out</a>
              </div>
            </div>

            <!-- Account Navigation -->
            <div class="card" style="box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
              <div class="card-body">
                <h5 class="card-title">Account Navigation</h5>
                <nav class="account-nav">
                  <ul>
                    <li>
                      <div class="option-wrapper border mb-2 ml-2">
                        <a href="#">Coupons</a>
                      </div>
                    </li>
                    <li>
                      <div class="option-wrapper border mb-2 ml-2">
                        <a href="/wallet">Wallet</a>
                      </div>
                    </li>
                    <li>
                      <div class="option-wrapper border mb-2 ml-2">
                        <a href="/address">Addresses</a>
                      </div>
                    </li>
                    <li>
                      <div class="option-wrapper border mb-2 ml-2">
                        <a href="/resetpassword">Reset Password</a>
                      </div>
                    </li>
                  </ul>
                </nav>
                <% if(successMessages && successMessages.length> 0){ %>
                  <div style="color: green; font-size: 14px; font-weight: bold;">
                    <%= successMessages %>
                  </div>
                  <% } %>
              </div>
            </div>
          </div>

          <div class="col-md-8">
            <!-- Order History -->
            <div class="card mb-4" style="box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);">
              <div class="card-body">
                <h5 class="card-title">Order History</h5>
                <% if (orders.length===0) { %>
                  <h4 class="text-center" style="color: #585757; margin-top: 20px; margin-bottom: 50px;">No orders
                    found.
                    <a href="/" class="text-primary">Explore our products</a> and grab the deals!
                  </h4>
                  <% } else { %>
                    <% orders.forEach(order=> { %>
                      <div class="card mb-3">
                        <div class="card-header">
                          <h5>Order ID: <%= order.orderId %>
                          </h5>
                        </div>
                        <div class="card-body">
                          <p>Amount: <span class="text-black font-weight-bold ml-1">
                              <%= order.amount %>
                            </span></p>
                          <p>Status: <span class="text-black font-weight-bold ml-1">
                              <%= order.status %>
                            </span></p>
                          <% if (order.address) { %>
                            <% order.address.forEach(address=> { %>
                              <p>Delivery Address: <span class="text-black font-weight-bold ml-1">
                                  <%= address.save_as %>, <%= address.housename %>,
                                      <%= address.city %>, <%= address.pincode %>
                                </span></p>
                              <% }); %>
                                <% } else { %>
                                  <p>Delivery Address: N/A</p>
                                  <% } %>
                                    <div class="row">
                                      <% order.items.forEach(item=> { %>
                                        <div class="col-md-4 mb-3">
                                        
                                            <div class="card">
                                              <a href="/shopSingle/<%= item.productId._id %>">
                                              <% if (item.productId.image && item.productId.image.length > 0) { %>
                                                <img src="/<%= item.productId.image[0] %>" class="card-img-top" alt=""
                                                  style="height: 250px; object-fit: cover;">
                                              <% } else { %>
                                                <div class="card-img-top" style="height: 250px; background-color: #ccc;"></div>
                                              <% } %>
                                              <div class="card-body" style="height: 140px;">
                                                <h6 class="card-title text-center"><%= item.productId.name %></h6>
                                                <p class="card-text text-center">
                                                  <%= item.productId.description %><br>
                                                  Quantity: <%= item.quantity %>
                                                </p>
                                              </div>
                                            </a>
                                              <!-- <div class="card-footer" style="text-align: center;">
                                                <a onclick="confirm('/itemCancel/<%= order._id %>/<%= item.productId %>')"  style="cursor: pointer; color: red; font-weight: 200;"><b>Cancel Product</b></a>
                                            </div> -->
                                            </div>
                                          
                                        </div>
                                        <% }); %>
                                    </div>
                        </div>
                        <div class="card-footer">
                          <a href="/order-tracking/<%= order._id %>"><b> Order
                              Details</b></a>&nbsp;&nbsp;&nbsp;&nbsp;
                          <% if (order.status !=='Cancelled' && order.status !=='delivered' && order.status
                            !=='returned' ) { %>
                            <a onclick="confirm('/cancelorder/<%= order._id %>')"
                              style="cursor: pointer; color: red; font-weight: 200;"><b>
                                Cancel Order</b></a>
                            <% } %>
                            <% if( order.return && order.return.length> 0 &&
                            order.return[0].status ) {%>
                            <span style="color: black;">Return Status: <span
                                    class="text-primary"><%= order.return[0].status %></span></span>
                                <%}else if (order.status==='delivered' && new Date(order.updated.getTime() +
                                    5 * 24 * 60 * 60 * 1000)>= new Date()) {%>
                                    <a onclick="confirmReturn('<%= order._id %>')" class="text-primary" style="cursor: pointer; font-weight: 400;">
                                        Return</a>
                                    <%}%>
                        </div>
                      </div>
                      <% }); %>
                        <% } %>
              </div>
            </div>
          </div>

        </div>
      </div>


      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
      <script>
        function confirm(itemId) {
          Swal.fire({
            title: "Are you sure?",
            text: "Are you sure you want to proceed?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Confirm",
            cancelButtonText: "Cancel",
            dangerMode: true,
          }).then((result) => {
            if (result.isConfirmed) {
              window.location.href = itemId;
            } else {
              console.log("User canceled");
            }
          });
        }

        function confirmReturn(itemId) {
            Swal.fire({
                title: 'Order Return',
                input: 'text',
                inputPlaceholder: 'Enter your Reason',
                showCancelButton: true,
                confirmButtonText: 'Submit',
                cancelButtonText: 'Cancel',
                inputValidator: (value) => {
                    if (!value) {
                        return 'You need to enter something!';
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    const inputValue = result.value;
                    $.ajax({
                        url: '/returnReason',
                        method: 'POST',
                        data: { itemId: itemId, reason: inputValue },
                        success: function (response) {
                            Swal.fire('Submitted!', `Your reason has been submitted.`, 'success');
                            setTimeout(function () {
                                location.reload();
                            }, 1000);

                        },
                        error: function (xhr, status, error) {
                            Swal.fire('Error!', `Failed to send data: ${error}`, 'error');
                        }
                    });
                }
            });
        }
      </script>
      <%- include('../partials/userFooter') -%>