<%- include('../partials/userHeader') -%>

	<style>
		.light-shadow {
			box-shadow: 0 0 5px rgba(72, 70, 70, 0.1);
		}
	</style>

	<div class="colorlib-loader"></div>

	<div id="page">
		<nav class="colorlib-nav" role="navigation">
			<div class="top-menu">
				<div class="container">
					<div class="row">
						<div class="col-sm-7 col-md-9">
							<div id="colorlib-logo"><a href="/home">Urban Kicks</a></div>
						</div>
						<div class="col-sm-5 col-md-3">
							<form action="#" class="search-wrap">
								<div class="form-group">
									<input type="search" class="form-control search" placeholder="Search">
									<button class="btn btn-primary submit-search text-center" type="submit"><i
											class="icon-search"></i></button>
								</div>
							</form>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 text-left menu-1">
							<ul>
								<li class="<%= currentPage === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
								<% categories.forEach(category => { %>
									<li class="<%= currentPage === category.id ? 'active' : '' %>"><a href="/shop/<%= category.id %>"><%= category.name %></a></li>
							<% }); %>
								<li class="<%= currentPage === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
								<li class="<%= currentPage === 'contact' ? 'active' : '' %>"><a href="/contact">Contact</a></li>
								<li class="cart <%= currentPage === 'cart' ? 'active' : '' %>"><a href="/cart"><i class="icon-shopping-cart"></i> [0]</a></li>
								<li class="wishlist <%= currentPage === 'wishlist' ? 'active' : '' %>"><a href="/wishlist"><i class="icon-heart2"></i></a></li>
								<li class="user-profile <%= currentPage === 'profile' ? 'active' : '' %>"><a href="/profile"><i class="icon-user2"></i></a></li>
							 
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="sale">
				<div class="container">
					<div class="row">
						<div class="col-sm-8 offset-sm-2 text-center">
							<div class="row">
								<div class="owl-carousel2">
									<div class="item">
										<div class="col">
											<h3><a href="#">25% off (Almost) Everything! Use Code: Summer Sale</a></h3>
										</div>
									</div>
									<div class="item">
										<div class="col">
											<h3><a href="#">Our biggest sale yet 50% off all summer shoes</a></h3>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</nav>

		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="bread"><span><a href="/">Home</a></span> / <span>Shopping Cart</span></p>
					</div>
				</div>
			</div>
		</div>
		<div id="flashdiv" class="text-center mt-4">
			<% if (errorMessages && errorMessages.length> 0) { %>
				<% errorMessages.forEach(message=> { %>
					<p style="color:red;">
						<%= message %>
					</p>
					<% }); %>
						<% } %>
		</div>

		<% if (cart && cart.item && cart.item.length> 0) { %>
			<div class="colorlib-product">
				<div class="container">
					<div class="row row-pb-lg">
						<div class="col-md-10 offset-md-1">
							<div class="process-wrap">
								<div class="process text-center active">
									<p><span>01</span></p>
									<h3>Shopping Cart</h3>
								</div>
								<div class="process text-center">
									<p><span>02</span></p>
									<h3>Checkout</h3>
								</div>
								<div class="process text-center">
									<p><span>03</span></p>
									<h3>Order Complete</h3>
								</div>
							</div>
						</div>
					</div>
					<div class="row row-pb-lg">
						<div class="col-md-12">
							<div class="product-name d-flex">
								<div class="one-forth text-left px-4">
									<span>Product Details</span>
								</div>
								<div class="one-eight text-center">
									<span>Size</span>
								</div>
								<div class="one-eight text-center">
									<span>Price</span>
								</div>
								<div class="one-eight text-center">
									<span>Quantity</span>
								</div>
								<div class="one-eight text-center">
									<span>Total</span>
								</div>
								<div class="one-eight text-center px-4">
									<span>Remove</span>
								</div>
							</div>
							<% cart.item.forEach(function(item,index) { %>
								<div class="product-cart d-flex">
									<div class="one-forth" style="margin-left: 15px;">
										<img src="/<%= item.productId.image[0] %>" style="height: 125px; width: 100px;">
										<div class="display-tc">
											<h3>
												<%= item.productId.description %>
											</h3> <!-- Product Description -->
										</div>
									</div>
									<div class="one-eight text-center" style="margin-top: 15px;">
										<div class="display-tc">
											<span class="size">UK <%= item.size %></span> <!-- Size -->
										</div>
									</div>
									<div class="one-eight text-center" style="margin-top: 15px;">
										<div class="display-tc">
											<span class="price"> ₹ <%= item.price %>.00</span> <!-- Price -->
										</div>
									</div>

									<div class="one-eight text-center">
										<div class="display-tc">
											<div class="quantity input-group" style="display: inline-block; align-items: center;">
												<span class="input-group-btn">
													<button
														onclick="updateQuantity('<%= cart._id %>','<%= item._id %>', '<%= item.size %>','<%= item.price %>','<%= index %>' , -1, )"
														class="btn btn-outline-dark js-btn-minus" style="border-color: #aba9a9;"
														type="button">&minus;</button>
												</span>
												<input id="sst<%= index%>" type="text" class="form-control text-center mb-1 light-shadow"
													value="<%= item.quantity %>" placeholder="" aria-label="Example text with button addon"
													aria-describedby="button-addon1">
												<span class="input-group-btn ml-1">
													<button
														onclick="updateQuantity('<%= cart._id %>','<%= item._id %>', '<%= item.size %>','<%= item.price %>','<%= index %>' , 1, )"
														class="btn btn-outline-dark js-btn-plus" style="border-color: #aba9a9;"
														type="button">&plus;</button>
												</span>
											</div>
										</div>
									</div>


									<div class="one-eight text-center" style="margin-top: 15px;">
										<div class="display-tc">
											<span class="price" id="total<%= index%>"> ₹ <%= item.total%>.00</span>
										</div>
									</div>
									<div class="one-eight text-center" style="margin-top: 15px;">
										<div class="display-tc">
											<a onclick="confirm('/deletcart/<%= item._id %>/<%= item.size %>')" class="btn btn-dark btn-xs"
												style="color: white; border-radius: 5px;">x</a>
										</div>
									</div>
								</div>
								<% }); %>

						</div>
					</div>
				</div>

				<div class="container d-flex justify-content-between ">
					<div class="row ">
						<div class="col-md-4">
							<a href="/" style="color: white;"><button class="btn btn-dark">Continue Shopping</button></a>
						</div>
					</div>
					<div class="row row-pb-lg">
						<div class="col-md-8">
							<div class="total-wrap text-center">
								<div class="total" style="width: 300px;">
									<div class="sub">
										<h3>Cart Total</h3>
									</div>
									<div class="grand-total">
										<p><span><strong>Total:</strong></span> <span id="total"> ₹ <%= cart.total %>.00</span></p>
									</div>
									<div class="mt-4">
										<a href="/checkout" id="checkout"><button class="btn btn-dark w-80">Proceed To
												Checkout</button></a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<% } else { %>
				<h4 class="text-center" style="color: #585757; margin-top: 20px; margin-bottom: 50px;">Your cart is empty. <a
						href="/" class="text-primary">Explore our products</a> and add items to your cart!
				</h4>
				<% } %>


					<div class="row">
						<div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
							<h2>Related Products</h2>
						</div>
					</div>
					<div class="container">
						<div class="row row-pb-md">
							<% products.forEach(product=> { %>
								<div class="col-md-3 col-lg-3 mb-4 text-center">
									<div class="product-entry border">
										<a href="/shopSingle/<%= product._id %>" class="prod-img">
											<img src="<%= product.image[0] %>" class="img-fluid" alt="<%= product.name %>">
										</a>
										<div class="desc">
											<h2><a href="/shopSingle/<%= product._id %>">
													<%= product.name %>
												</a></h2>
											<p>
												<%= product.description %>
											</p>
											<span class="price">$<%= product.price %></span>
										</div>
									</div>
								</div>
								<% }); %>
						</div>
					</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	<script>
		function confirm(itemId) {
			Swal.fire({
				title: "Are you sure?",
				text: "Are you sure you want to proceed?",
				icon: "warning",
				showCancelButton: true,
				confirmButtonColor: "#3085d6",
				cancelButtonColor: "#d33",
				confirmButtonText: "Confirm",
				cancelButtonText: "Cancel",
				dangerMode: true,
			})
				.then((result) => {
					if (result.isConfirmed) {

						window.location.href = itemId;
					} else {
						console.log("User canceled");
					}
				});
		}
	</script>

	<script>
		async function updateQuantity(cartId, productId, size, price, index, count) {
			try {
				let quantityInput = document.getElementById(`sst${index}`);
				let currentQuantity = parseInt(quantityInput.value);
				const response = await fetch(`/updateCartQuantity/${productId}/${size}`, {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						cartId: cartId,
						action: count,
						newQuantity: count + currentQuantity,
					})
				});
				const data = await response.json();
				if (data.success) {
					quantityInput.value = data.newQuantity;
					document.getElementById(`total${index}`).innerText = `₹ ${price * data.newQuantity}.00`;
					document.getElementById(`total`).innerText = `₹ ${data.total}.00`;
				} else {
					console.error('Failed to update quantity:', data.error);
					quantityInput.value = currentQuantity;

					if (data.error === 'Quantity exceeds stock limits') {
						Swal.fire({
							text: 'Quantity exceeds stock limits',
							icon: 'error',
							confirmButtonText: 'OK',
							customClass: {
								title: 'text-danger',
								popup: 'swal2-popup-custom',
								confirmButton: 'btn btn-danger'
							},
							showCancelButton: false,
							showCloseButton: true,
							showLoaderOnConfirm: false,
							timer: 3000
						});
					} else {
						Swal.fire({
							text: 'Quantity Cannot be zero',
							icon: 'error',
							confirmButtonText: 'OK',
							customClass: {
								title: 'text-danger',
								popup: 'swal2-popup-custom',
								confirmButton: 'btn btn-danger'
							},
							showCancelButton: false,
							showCloseButton: true,
							showLoaderOnConfirm: false,
							timer: 3000
						});
					}
				}
			} catch (error) {
				console.error('Error parsing cart JSON:', error);
			}
		}
	</script>
	<%- include('../partials/userFooter') -%>