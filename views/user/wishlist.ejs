<%- include('../partials/userHeader') -%>

	

	<div class="colorlib-loader"></div>

	<div id="page">
		<nav class="colorlib-nav" role="navigation">
			<div class="top-menu">
				<div class="container">
					<div class="row">
						<div class="col-sm-7 col-md-9">
							<div id="colorlib-logo"><a href="/home">Urban Kicks</a></div>
						</div>
						<div class="col-sm-5 col-md-3">
							<form action="/" id="searchForm" class="search-wrap">
								<div class="form-group">
									 <input type="search" name="search" id="searchInput" class="form-control search"  placeholder="Search" >
									 <button class="btn btn-primary submit-search text-center" type="submit"><i class="icon-search"></i></button>
								</div>
						 </form>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12 text-left menu-1">
							<ul>
								<li class="<%= currentPage === 'home' ? 'active' : '' %>"><a href="/">Home</a></li>
								<% categories.forEach(category => { %>
									<li class="<%= currentPage === category.id ? 'active' : '' %>"><a href="/shop/<%= category.id %>"><%= category.name %></a></li>
							<% }); %>
								<li class="<%= currentPage === 'about' ? 'active' : '' %>"><a href="/about">About</a></li>
								<li class="<%= currentPage === 'contact' ? 'active' : '' %>"><a href="/contact">Contact</a></li>
								<li class="cart <%= currentPage === 'cart' ? 'active' : '' %>"><a href="/cart"><i class="icon-shopping-cart"></i><% if (itemCount&&itemCount>0) { %>
										<span class="count">[<%= itemCount %>]</span> 
									<% } %></a></li>
								<li class="wishlist <%= currentPage === 'wishlist' ? 'active' : '' %>"><a href="/wishlist"><i class="icon-heart2"></i></a></li>
								<li class="user-profile <%= currentPage === 'profile' ? 'active' : '' %>"><a href="/profile"><i class="icon-user2"></i></a></li>
							 
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="sale">
				<div class="container">
					<div class="row">
						<div class="col-sm-8 offset-sm-2 text-center">
							<div class="row">
								<div class="owl-carousel2">
									<div class="item">
										<div class="col">
											<h3><a href="#">25% off (Almost) Everything! Use Code: Summer Sale</a></h3>
										</div>
									</div>
									<div class="item">
										<div class="col">
											<h3><a href="#">Our biggest sale yet 50% off all summer shoes</a></h3>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</nav>

		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="bread"><span><a href="/">Home</a></span> / <span>Wishlist</span></p>
					</div>
				</div>
			</div>
		</div>

		<div class="container mt-4">
			<div class="row justify-content-center">
					<% if (!fav || fav.item.length === 0) { %>
							<h4 class="text-center" style="color: #585757; margin-top: 20px; margin-bottom: 50px;">Your wishlist is empty. <a
											href="/" class="text-primary">Explore our products</a> and add items to your Wishlist!
							</h4>
					<% } else { %>
							<% fav.item.forEach(product=> { %>
									<div class="col-md-3 mb-4">
											<div class="card border text-center" style="height: 580px;">
													<% if (product.productId) { %> <!-- Check if product.productId exists -->
															<a href="/shopSingle/<%= product.productId._id %>"><img src="/<%= product.productId.image[0] %>"
																			class="card-img-top" alt="<%= product.productId.name %>"
																			style="width: 253.5px; height: auto; object-fit: cover" /></a>
															<div class="card-body">
																	<h5 class="card-title"><a href="/shopSingle/<%= product.productId._id %>"><%= product.productId.name %></a>
																	</h5>
																	<p><%= product.productId.description %> <br> size : <%= product.size %></p>
																	<form action="/addtoCart/<%= product.productId._id %>?size=<%= product.size %>"
																			method="post" class="text-center">
																			<button type="submit" class="btn btn-primary btn-sm btn-block mb-2"><i
																							class="icon-shopping-cart mr-1"></i>Add to Cart</button>
																			<a onclick="confirm('/removefromwishlist/<%= product.productId._id %>')"
																					class="btn btn-outline-dark btn-sm btn-block" style="color: #f34646;">Remove from
																					Wishlist</a>
																			<input type="hidden" name="size" value="<%= product.size %>" />
																			<input type="hidden" name="quantity" value="1" />
																	</form>
															</div>
													<% } else { %>
															<!-- Handle the case where product.productId is null -->
															<p>Product information not available</p>
													<% } %>
											</div>
									</div>
							<% }); %>
					<% } %>
			</div>
	</div>
	
		
<br>
<br>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	<script>
		function confirm(itemId) {
			Swal.fire({
				title: "Are you sure?",
				text: "Are you sure you want to proceed?",
				icon: "warning",
				showCancelButton: true,
				confirmButtonColor: "#3085d6",
				cancelButtonColor: "#d33",
				confirmButtonText: "Confirm",
				cancelButtonText: "Cancel",
				dangerMode: true,
			})
				.then((result) => {
					if (result.isConfirmed) {

						window.location.href = itemId;
					} else {
						console.log("User canceled");
					}
				});
		}
	</script>
		<%- include('../partials/userFooter') -%>