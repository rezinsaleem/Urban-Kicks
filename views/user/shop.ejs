	<!-- Sorting Logic -->
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const sortOptions = document.getElementById('sortOptions').getElementsByTagName('a');

			for (const option of sortOptions) {
				option.addEventListener('click', function (event) {
					event.preventDefault();

					const sortType = event.target.dataset.sort;

				
                // Remove 'selected' class and normal font weight from all other list items
                for (const item of sortOptions) {
                    item.classList.remove('selected');
                    item.style.fontWeight = 'normal';
                }
                // Add 'selected' class and bold font weight to the clicked list item
                event.target.classList.add('selected');
                event.target.style.fontWeight = 'bold';
          

					sortProducts(sortType);
				});
			}


			function sortProducts(sortType) {
				const productContainer = document.getElementById('productContainer');
				if (!productContainer) {
					console.error('Product container not found');
					return;
				}

				
				let products = Array.from(productContainer.children);

				products.sort((a, b) => {
					// Implement sorting logic based on the selected sort type
					switch (sortType) {
						case 'lowToHigh':
							return parseFloat(a.querySelector('.price').innerText.split('â‚¹')[1]) - parseFloat(b.querySelector('.price').innerText.split('â‚¹')[1]);
						case 'highToLow':
							return parseFloat(b.querySelector('.price').innerText.split('â‚¹')[1]) - parseFloat(a.querySelector('.price').innerText.split('â‚¹')[1]);
						case 'aToZ':
							return a.querySelector('#description').innerText.localeCompare(b.querySelector('#description').innerText);
						case 'zToA':
							return b.querySelector('#description').innerText.localeCompare(a.querySelector('#description').innerText);
						case 'newArrivals':
              return new Date(b.createdAt) - new Date(a.createdAt);
						default:
							return 0; // Default to no sorting
					}
				});

				// Clear the product container and append sorted products
				productContainer.innerHTML = '';
				products.forEach(product => {
					productContainer.appendChild(product);
				});
			}

		});
	</script>

<script>

document.addEventListener('DOMContentLoaded', function () {
    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('searchInput');
    const productContainer = document.getElementById('productContainer');
    let originalProducts = Array.from(productContainer.children);

    if (productContainer) {
        searchForm.addEventListener('submit', function (event) {
            event.preventDefault();
            const searchQuery = searchInput.value.trim().toLowerCase();
            console.log("Search query:", searchQuery);

            // Create a regex pattern for the search query
            const regex = new RegExp(searchQuery, 'i');

            // Filter products based on the regex pattern from the original list
            const filteredProducts = originalProducts.filter(product => {
                const productNameElement = product.querySelector('#description');
                if (productNameElement) {
                    const productName = productNameElement.innerText.toLowerCase();
                    return regex.test(productName);
                }
                return false;
            });
            console.log("Filtered products:", filteredProducts);

            // Clear the product container and append filtered products
            productContainer.innerHTML = '';
            if (filteredProducts.length > 0) {
                filteredProducts.forEach(product => {
                    productContainer.appendChild(product);
                });
            } else {
                // If no search matches found, display a message
                const noMatchMessage = document.createElement('p');
                noMatchMessage.textContent = 'No products match your search.';
								noMatchMessage.style.fontWeight = 'bold'; 
                productContainer.appendChild(noMatchMessage);
            }

						productContainer.scrollIntoView({ behavior: 'smooth' });
        });
    } else {
        console.error('Product container not found');
    }
});

</script>




